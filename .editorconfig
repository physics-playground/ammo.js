# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
max_line_length = 100
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,clang-tidy}]
indent_size = 1
indent_style = space

[*.{yml,clang-format}]
indent_size = 2
indent_style = space

[*.{cpp,h}]
indent_style = tab

[*.js]
indent_size = 4
indent_style = space
