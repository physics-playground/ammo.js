{
    "name": "ammo.js",
    "version": "0.0.2",
    "description": "Port of Bullet Physics to JavaScript using Emscripten.",
    "main": "bin/ammo.js",
    "license": "zlib",
    "repository": {
        "type": "git",
        "url": "git://github.com/physics-playground/ammo.js.git"
    },
    "author": "Alon Zakai <alonzakai@gmail.com>",
    "bugs": {
        "url": "https://github.com/physics-playground/ammo.js/issues"
    },
    "homepage": "https://github.com/physics-playground/ammo.js",
    "devDependencies": {
        "ava": "^3.11.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.13.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.26.0",
        "http-server": "^14.1.0",
        "run-script-os": "^1.1.6",
        "shelljs": "^0.8.5",
        "webidl2ts": "^1.0.0"
    },
    "eslintConfig": {
        "globals": {
            "Module": "writable",
            "Ammo": "readonly"
        },
        "env": {
            "browser": true,
            "commonjs": true,
            "es2021": true,
            "node": true
        },
        "extends": [
            "airbnb-base"
        ],
        "parserOptions": {
            "ecmaVersion": 12
        },
        "rules": {
            "max-len": [
                "error",
                100
            ],
            "indent": [
                "error",
                4
            ],
            "new-cap": [
                "error",
                {
                    "newIsCapExceptionPattern": "^Ammo\\.."
                }
            ],
            "dot-notation": [
                "error",
                {
                    "allowKeywords": true,
                    "allowPattern": "^(([A-Z]+(_[A-Z]+)+)|Ammo)$"
                }
            ]
        }
    },
    "ava": {
        "files": [
            "./tests/**",
            "!tests/**/{fixtures,helpers}/**"
        ],
        "ignoredByWatcher": [
            "{build}/**"
        ],
        "environmentVariables": {}
    },
    "scripts": {
        "setup": "run-script-os",
        "setup:win32": "call setup.bat",
        "build": "npm run setup && run-script-os && npm run generate",
        "build:win32": "call build.bat",
        "test": "npm run test-js && npm run test-wasm",
        "test-js": "cross-env AMMO_PATH=bin/ammo.js ava",
        "test-wasm": "cross-env AMMO_PATH=bin/ammo.wasm.js ava",
        "generate": "npm run generate:module && npm run generate:ambient",
        "generate:module": "webidl2ts -i ammo.idl -o types/ammo.d.ts -ed -n Ammo",
        "generate:ambient": "webidl2ts -i ammo.idl -o types/ambient/ammo.d.ts -e -n Ammo"
    }
}
