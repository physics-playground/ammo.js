{
    "makefile.extensionOutputFolder": "./.vscode",
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "cmake.configureOnOpen": true,
    "cmake.configureOnEdit": true,
    "cmake.ctestArgs": ["--output-log", "build/ctest.log", "--output-junit",
        "build/ctest_junit.xml"],
    "python.linting.lintOnSave": true,
    "python.linting.pylintEnabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.flake8Enabled": false,
    "python.formatting.provider": "black",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "ava.directoryReplaceFrom": "/tests",
    "ava.directoryReplaceTo": "/tests",
    "ava.extensionReplaceFrom": ".ts",
    "ava.extensionReplaceTo": ".js",
    "eslint.validate": ["javascript"],
    "[html]": {
        "editor.formatOnSave": true,
        "editor.suggest.insertMode": "replace",
        "gitlens.codeLens.scopes": [
            "document"
        ]
    },
    "eslint.alwaysShowStatus": true,
    "eslint.format.enable": true,
    "[javascript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.formatOnSave": true,
        "editor.maxTokenizationLineLength": 2500
    },
    "[json]": {
        "editor.formatOnSave": true,
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace",
        "gitlens.codeLens.scopes": [
            "document"
        ]
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "keep",
        "gitlens.codeLens.scopes": [
            "document"
        ],
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        },
        "editor.formatOnSave": true
    },
    "[python]": {
        "editor.formatOnSave": true
    },
    "prettier.proseWrap": "never",
    "cmake.buildDirectory": "${workspaceFolder}/build/vscode",
    "files.associations": {
        "*.cmake": "cmake",
        ".clang-tidy": "yaml"
    },
    "cSpell.words": [
        "Alon",
        "ammojs",
        "cmake",
        "Coumans",
        "emcc",
        "Emscripten",
        "emsdk",
        "Heightmap",
        "Makefiles",
        "raycast",
        "webgl",
        "Zakai"
    ],
    "yaml.schemas": {
        "https://json.schemastore.org/github-workflow.json": "github/workflows/build.yml"
    }
}
